{
   "handler":"Microsoft.Compute.MultiVm",
   "version":"0.1.1-preview",
   "parameters":{
      "basics":[
         {
            "name":"adminUsername",
            "type":"Microsoft.Common.TextBox",
            "label":"Administrator email address",
            "toolTip":"Username for the Admin account. Must be a valid email address.",
            "constraints":{
               "required":true,
               "regex":"^(?:[a-z0-9!#$%&'*+/=?^_`{|}~-]+(?:\\.[a-z0-9!#$%&'*+/=?^_`{|}~-]+)*|\"(?:[\\x01-\\x08\\x0b\\x0c\\x0e-\\x1f\\x21\\x23-\\x5b\\x5d-\\x7f]|\\\\[\\x01-\\x09\\x0b\\x0c\\x0e-\\x7f])*\")@(?:(?:[a-z0-9](?:[a-z0-9-]*[a-z0-9])?\\.)+[a-z0-9](?:[a-z0-9-]*[a-z0-9])?|\\[(?:(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\\.){3}(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?|[a-z0-9-]*[a-z0-9]:(?:[\\x01-\\x08\\x0b\\x0c\\x0e-\\x1f\\x21-\\x5a\\x53-\\x7f]|\\\\[\\x01-\\x09\\x0b\\x0c\\x0e-\\x7f])+)\\])$",
               "validationMessage":"Must be a valid e-mail address"
            }
         },
         {
            "name":"adminUserPassword",
            "type":"Microsoft.Common.PasswordBox",
            "label":{
               "password":"Administrator user password",
               "confirmPassword":"Confirm password"
            },
            "toolTip":"Password for Admin account. Must be at least 8 characters containing letters, numbers and symbols.",
            "osPlatform":"Linux",
            "options":{
               "hideConfirmation":true
            }
         },
         {
            "name":"vmUsername",
            "type":"Microsoft.Compute.UserNameTextBox",
            "label":"VM Username",
            "toolTip":"Admin username for the virtual machines. Same Credientials is to SSH to the box.",
            "osPlatform":"Linux"
         },
         {
            "name":"SSHCredntials",
            "type":"Microsoft.Compute.CredentialsCombo",
            "label":{
               "authenticationType":"Authentication type",
               "password":"VM Password",
               "confirmPassword":"Confirm VM password",
               "sshPublicKey":"VM SSH public key"
            },
            "toolTip":{
               "authenticationType":"",
               "password":"",
               "sshPublicKey":""
            },
            "constraints":{
               "required":true
            },
            "options":{
               "hideConfirmation":false
            },
            "osPlatform":"Linux"
         },
         {
            "name":"smartsense",
            "type":"Microsoft.Common.OptionsGroup",
            "label":"Enable SmartSense?",
            "defaultValue":"false",
            "toolTip":"By Opting-In, you read and agree to the SmartSense terms at http://tinyurl.com/hdcloud-1-8-0-smartsense-1",
            "constraints":{
               "allowedValues":[
                  {
                     "label":"I have read and opt in to SmartSense telemetry.",
                     "value":"true"
                  },
                  {
                     "label":"I do not opt-in to SmartSense telemetry.",
                     "value":"false"
                  }
               ]
            }
         }
      ],
      "steps":[
         {
            "name":"AdvancedConfig",
            "label":"Advanced settings",
            "subLabel":{
               "preValidation":"Configure the cloud controller",
               "postValidation":"Done"
            },
            "bladeTitle":"Cloud controller settings",
            "elements":[
               {
                  "name":"controllerVmSize",
                  "type":"Microsoft.Compute.SizeSelector",
                  "label":"Controller Instance Type",
                  "toolTip":"Virtual machine instance type to use for the cloud controller",
                  "recommendedSizes":[
                     "Standard_DS2_v2"
                  ],
                  "constraints":{
                     "allowedSizes":[
                        "Standard_DS2",
                        "Standard_DS3",
                        "Standard_DS4",
                        "Standard_DS11",
                        "Standard_DS12",
                        "Standard_DS13",
                        "Standard_DS14",
                        "Standard_DS2_v2",
                        "Standard_DS3_v2",
                        "Standard_DS4_v2",
                        "Standard_DS11_v2",
                        "Standard_DS12_v2",
                        "Standard_DS13_v2",
                        "Standard_DS14_v2"
                     ]
                  },
                  "osPlatform":"Linux",
                  "count":1
               },
               {
                  "name":"remoteLocation",
                  "type":"Microsoft.Common.TextBox",
                  "label":"Allow connections from this address range. Must be a valid CIDR IP. Learn more at http://tinyurl.com/hdcloud-1-8-0-cidr-2.",
                  "defaultValue":"10.0.0.0/16",
                  "constraints":{
                     "required":true,
                     "regex":"^(([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])\\.){3}([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])(\\/([0-9]|[1-2][0-9]|3[0-2]))$",
                     "validationMessage":"Must be a single IP address or an IP address range in CIDR notation (More information at http://tinyurl.com/hdcloud-1-8-0-cidr-2."
                  }
               }
            ]
         }
      ],
      "outputs":{
         "adminUsername":"[basics('adminUsername')]",
         "adminUserPassword":"[basics('adminUserPassword')]",
         "username":"[basics('vmUsername')]",
         "password":"[basics('SSHCredntials').password]",
         "sshKey":"[basics('SSHCredntials').sshPublicKey]",
         "smartsense":"[basics('smartsense')]",
         "vmSize":"[steps('AdvancedConfig').controllerVmSize]",
         "remoteLocation":"[steps('AdvancedConfig').remoteLocation]",
         "cloudControllerOsDisk":"new"
      }
   }
}
